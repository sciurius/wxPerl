OUTPUT
O_WXOBJECT
    _object_2_sv( $arg, $var );

O_NON_WXOBJECT
    _non_object_2_sv( $arg, $var, ${(my $ntt=$ntype)=~s/^Wx_(.*)Ptr$/wxPl$1Name/g;\${ntt}} );

T_KEYCODE
    sv_setiv( $arg, $var );

T_UV
    sv_setuv( $arg, (UV)$var );

INPUT
O_WXOBJECT
    $var = ($type) _sv_2_object( $arg, ${(my $ntt=$ntype)=~s/^Wx_(.*)Ptr$/wxPl$1Name/g;\${ntt}} );

O_NON_WXOBJECT
    $var = ($type) _sv_2_object( $arg, ${(my $ntt=$ntype)=~s/^Wx_(.*)Ptr$/wxPl$1Name/g;\${ntt}} );

O_POINT
    $var = _sv_2_wxpoint( $arg );

O_SIZE
    $var = _sv_2_wxsize( $arg );

O_COLOUR
    $var = *($type *) _sv_2_object( $arg, ${(my $ntt=$ntype)=~s/^Wx_(.*)(?:Ptr)?$/wxPl$1Name/g;\${ntt}} );

T_KEYCODE
    $var = _sv_2_keycode( $arg );

T_UV
    $var = ($type)SvUV( $arg );

#
# Wx_UserData*
#

INPUT
O_USERDATACD
    if( SvOK( $arg ) )
    {
        SV* _data = sv_newmortal();
        sv_setsv( _data, $arg );
        $var = new _wxUserDataCD( _data );
    }
    else
        $var = 0;

O_USERDATAO
    if( SvOK( $arg ) )
    {
        SV* _data = sv_newmortal();
        sv_setsv( _data, $arg );
        $var = new _wxUserDataO( _data );
    }
    else
        $var = 0;

OUTPUT
O_USERDATACD
    $arg = ( $var == 0 ) ? &PL_sv_undef : $var->m_data;
    SvREFCNT_inc( $arg ); // xsubpp mortalizes it...

O_USERDATAO
    $arg = ( $var == 0 ) ? &PL_sv_undef : $var->m_data;
    SvREFCNT_inc( $arg ); // xsubpp mortalizes it...

#
# SV_null
#

INPUT
T_SV_NULL
    $var = SvOK( $arg ) ? $arg : 0;

OUTPUT
T_SV_NULL
    $arg = ( $var == 0 ) ? &PL_sv_undef : $var;
    SvREFCNT_inc( $arg ); // xsubpp mortalizes it...

#
# streams
#
TYPEMAP
wxPliInputStream        S_PL_ISTREAM
wxPliOutputStream       S_PL_OSTREAM
wxInputStream *         S_WX_ISTREAM
wxOutputStream *        S_WX_OSTREAM
Wx_InputStream *        O_NON_WXOBJECT
Wx_OutputStream *       O_NON_WXOBJECT

INPUT
S_PL_ISTREAM
    wxPli_sv_2_istream( $arg, $var );

S_PL_OSTREAM
    wxPli_sv_2_ostream( $arg, $var );


OUTPUT
S_WX_ISTREAM
    wxPli_stream_2_sv( $arg, $var, "Wx::InputStream" );

S_WX_OSTREAM
    wxPli_stream_2_sv( $arg, $var, "Wx::OutputStream" );
